@model basketball_tournament_tracker.Models.Player
@{
    var teams = ViewBag.Teams as List<basketball_tournament_tracker.Models.Team>;
}

<form asp-action="Create" method="post">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Team"></label>
        <select asp-for="Team">
            @if (teams != null)
            {
                foreach (var team in teams)
                {
                    <option value="@team.Name">@team.Name</option>
                }
            }
        </select>
        <span asp-validation-for="Team"></span>
    </div>
    <div>
        <label asp-for="Position"></label>
        <select asp-for="Position">
            <option value="Guard">Guard</option>
            <option value="Forward">Forward</option>
            <option value="Center">Center</option>
        </select>
        <span asp-validation-for="Position"></span>
    </div>
    <div>
        <label asp-for="JerseyNumber"></label>
        <input asp-for="JerseyNumber" type="number" />
        <span asp-validation-for="JerseyNumber"></span>
    </div>
    <button type="submit">Create Player</button>
</form>
